{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pr-guardian/common": ["packages/common/src/index.ts"],
      "@pr-guardian/domain": ["packages/domain/src/index.ts"],
      "@pr-guardian/app-server-client": ["packages/app-server-client/src/index.ts"]
    },
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node"]
  }
}
